<p>Please LOGIN or SIGNUP first</p>
<% end %>

<div id="flash">
	<% flash.each do |key, value| -%>
	<div id="flash_<%= key %>"><%=h value %></div>
	<% end %>
</div>

<div id="clearance" class="sign-in">
  <h2><%= t(".title") %></h2>

  <%= render partial: '/sessions/form' %>

</div>

