<h3>Booking</h3>

<%= form_for [@listing, @reservation] do |f| %>
  <% if @errors.present? %>
    <div class="alert alert-warning">
      <%= @errors %>
    </div>
  <% end %>

  <div>
  <%= f.label "Start date" %>
  <%= f.date_field :start_date  %>
  </div>

  <div>
  <%= f.label "End date" %>
  <%= f.date_field :end_date %>
  </div>

  <div>
  <%= f.label "Number of guests" %>
  <%= f.number_field :num_guests %>
  </div>
  <br>

  <%= f.submit "Book" %>

<% end %>