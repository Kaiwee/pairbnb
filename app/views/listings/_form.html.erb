<%= form_for @listing do |f| %>
  <p>
    <%= f.label "Title" %><br>
    <%= f.text_field :title %><br>
    <%= f.label "Address" %><br>
    <%= f.text_field :address %><br>
    <%= f.label "Price" %><br>
    <%= f.number_field :price %><br>
    
    <% if signed_in? and current_user.moderator? %>
      <%= f.label "Status" %><br>
      <%= f.number_field :status %><br>
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>
    <% end %>