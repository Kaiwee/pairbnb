<h1>
	<strong>Title:</strong>
	<%= @listing.title %>		
</h1>

<h1>
	<strong>Address:</strong>
	<%= @listing.address %>		
</h1>

<h1>
	<strong>Price:</strong>
	<%= @listing.price %>		
</h1>

<h1>
	<%= @listing.max_num_guests %> guests maximum	
</h1>

<h1>
	<strong>Status:</strong>
	<%= @listing.status %>		
</h1>


<% if @listing.photos? %>
	<h2><strong>Pictures</strong></h2><br>
	<div class="row">
      <div class="col-sm-12">
		<div id="myCarousel" class="carousel slide" data-ride="carousel">

		    <!-- Wrapper for slides -->
		    <div class="carousel-inner">
		      <div class="item active">
		        <%= image_tag @listing.photos.first %>
		      </div>
		      <% @listing.photos.shift %>

		      <% @listing.photos.each do |photo| %>
		      <div class="item">
				<%= image_tag photo %>
		      </div>
		      <% end %>
		    </div>

		    <!-- Left and right controls -->
		    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
		      <span class="glyphicon glyphicon-chevron-left"></span>
		      <span class="sr-only">Previous</span>
		    </a>
		    <a class="right carousel-control" href="#myCarousel" data-slide="next">
		      <span class="glyphicon glyphicon-chevron-right"></span>
		      <span class="sr-only">Next</span>
		    </a>
		  </div>
		</div>
	</div>
<% end %>

<% if signed_in? and current_user.id != @listing.user_id %>
	<div class="well">
		<%= render 'reservations/form' %>
	</div>
<% end %>

<% if !signed_in? %>
	<p>You need to sign in or sign up to be able to book</p>
<% end %>

<% if signed_in? and current_user.id == @listing.user_id %>
	<h2>Customer Bookings</h2>
	<table>
	  <tr>
	  	<th>Reservation ID</th>
	    <th>Listing Title</th>
	    <th>Start Date</th>
	    <th>End Date</th>
	    <th>Number of night(s)</th>
	    <th>Num Guests</th>
	    <th>Total Price</th>
	    <th>Actions</th>
	  </tr>

	  <% @reservations.each do |reservation| %>
	    <tr>
	      <td><%= reservation.id %></td>
	      <td><%= link_to reservation.listing.title, reservation.listing %></td>
	      <td><%= reservation.start_date.try(:strftime, '%d %B %Y') %></td>
	      <td><%= reservation.end_date.try(:strftime, '%d %B %Y') %></td>
	      <td><%= reservation.num_night %></td>
	      <td><%= reservation.num_guests %></td>
	      <td><%= reservation.total_price %></td>
	       <td><%= link_to 'Cancel Booking', reservation_path, method: :delete, data: {confirm: 'Are you sure?' } %></td>
	    </tr>
	    </tr>
	  <% end %>
	</table>
<% end %>
